{
  "name": "repatrol",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "TypeScript + Playwright multi-agent game QA swarm",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "check": "tsc --noEmit -p tsconfig.json",
    "demo": "tsx scripts/run-demo.ts --serve --mode demo --headless --dry-run-github",
    "serve": "tsx scripts/serve-buggy-web-game.ts",
